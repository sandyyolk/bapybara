---
import { Instagram, Twitter, Facebook, Users, Link as LinkIcon, Mail } from 'lucide-react';
---

<footer class="footer">
    <div class="footer-content">
        <div class="social-links">
            <a href="https://instagram.com" target="_blank" aria-label="Instagram" class="social-icon">
                <Instagram size={24} />
            </a>
            <a href="https://twitter.com" target="_blank" aria-label="Twitter" class="social-icon">
                <Twitter size={24} />
            </a>
            <a href="https://facebook.com" target="_blank" aria-label="Facebook" class="social-icon">
                <Facebook size={24} />
            </a>
            <a href="https://campusgroups.case.edu/" target="_blank" aria-label="Campus Groups" class="social-icon">
                <Users size={24} />
            </a>
            <a href="https://linktr.ee/" target="_blank" aria-label="LinkTree" class="social-icon">
                <LinkIcon size={24} />
            </a>
        </div>
        
        <div class="email-section">
            <Mail size={18} class="mail-icon" />
            <a href="mailto:upb@case.edu">upb@case.edu</a>
        </div>

        <div class="copyright">
            &copy; {new Date().getFullYear()} University Program Board
        </div>
    </div>
</footer>

<style>
    .footer {
        width: 100%;
        background-color: #050505;
        padding: 3rem 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .social-links {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .social-icon {
        color: rgba(255, 255, 255, 0.7);
        transition: color 0.3s ease, transform 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .social-icon:hover {
        color: #ffffff;
        transform: translateY(-3px);
    }

    .email-section {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.6);
        font-family: var(--font-body);
        font-size: 1rem;
    }

    .email-section a {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .email-section a:hover {
        color: #ffffff;
        text-decoration: underline;
    }

    .copyright {
        font-family: var(--font-body);
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.3);
        margin-top: 1rem;
    }
</style>
