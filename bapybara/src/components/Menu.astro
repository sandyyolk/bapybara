---
import MenuCarousel from './MenuCarousel.jsx';

const mains = [
    { name: "The Bapyburger", desc: "Double patty, secret capybara sauce" },
    { name: "Chicken Yuzu Nuggets", desc: "Citrus glazed, crispy coating" },
    { name: "Mushroom Swiss Melt", desc: "For the foraging friends" }
];

const sides = [
    { name: "Lotus Root Chips", desc: "Lightly salted & cronchy" },
    { name: "Onsen Egg Salad", desc: "Creamy, dreamy, soft-boiled" },
    { name: "Edamame Popcorn", desc: "Spicy garlic seasoning" }
];

const drinks = [
    { name: "Yuzu Sparkling", desc: "Refreshing citrus bubbles" },
    { name: "Matcha Latte", desc: "Iced or hot, oat milk option" },
    { name: "Watermelon Splash", desc: "Fresh juice, mint garnish" }
];
---

<section id="menu" class="menu-section">
    <div class="content">
        <h2>The Menu</h2>
        
        <div class="menu-grid">
            <MenuCarousel client:visible title="Mains" items={mains} />
            <MenuCarousel client:visible title="Sides" items={sides} />
            <MenuCarousel client:visible title="Drinks" items={drinks} />
        </div>
    </div>
</section>

<style>
    .menu-section {
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #FFD700; /* Sunshine Yellow */
        position: relative;
        padding: 25rem 2rem; /* Maximized margins */
    }

    /* Blur transition at the top */
    .menu-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 10rem; /* Reduced height to reduce overlay */
        background: linear-gradient(to bottom, #0047AB, transparent); /* Cobalt Blue to Transparent */
        pointer-events: none;
        z-index: 1;
    }

    /* Blur transition at the bottom */
    .menu-section::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 10rem; /* Reduced height */
        background: linear-gradient(to top, #ffffff, transparent); /* Fade to White (About section) */
        pointer-events: none;
        z-index: 1;
    }

    .content {
        max-width: 1200px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 2; /* Ensure content is above gradients */
    }

    h2 {
        font-size: 3rem;
        margin-bottom: 4rem;
        color: #1a1a1a; /* Dark text for contrast */
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-shadow: none;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        width: 100%;
    }

    @media (max-width: 900px) {
        .menu-grid {
            grid-template-columns: 1fr;
            max-width: 500px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }
    }
</style>
