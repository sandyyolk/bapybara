---
import MenuCarousel from './MenuCarousel.jsx';

const mains = [
    { name: "The Bapyburger", desc: "Double patty, secret capybara sauce" },
    { name: "Chicken Yuzu Nuggets", desc: "Citrus glazed, crispy coating" },
    { name: "Mushroom Swiss Melt", desc: "For the foraging friends" }
];

const sides = [
    { name: "Lotus Root Chips", desc: "Lightly salted & cronchy" },
    { name: "Onsen Egg Salad", desc: "Creamy, dreamy, soft-boiled" },
    { name: "Edamame Popcorn", desc: "Spicy garlic seasoning" }
];

const drinks = [
    { name: "Yuzu Sparkling", desc: "Refreshing citrus bubbles" },
    { name: "Matcha Latte", desc: "Iced or hot, oat milk option" },
    { name: "Watermelon Splash", desc: "Fresh juice, mint garnish" }
];
---

<section id="menu" class="menu-section">
    <div class="content">
        <h2>The Menu</h2>
        
        <div class="menu-grid">
            <MenuCarousel client:visible title="Mains" items={mains} />
            <MenuCarousel client:visible title="Sides" items={sides} />
            <MenuCarousel client:visible title="Drinks" items={drinks} />
        </div>
    </div>
</section>

<style>
    .menu-section {
        min-height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #121212; /* Matching dark theme */
        position: relative;
        padding: 4rem 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05); /* Separator from details */
    }

    .content {
        max-width: 1200px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    h2 {
        font-size: 3rem;
        margin-bottom: 4rem;
        background: linear-gradient(to right, #fff, #aaa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        width: 100%;
    }

    @media (max-width: 900px) {
        .menu-grid {
            grid-template-columns: 1fr;
            max-width: 500px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }
    }
</style>
